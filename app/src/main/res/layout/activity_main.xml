<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.main.MainActivity">

    <TextView
            android:id="@+id/main_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Material.Display1"
            android:text="@string/main_title"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/main_ed_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/main_login_hint"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/main_txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill" />

    <EditText
            android:id="@+id/main_ed_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/main_password_hint"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/main_ed_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPassword"
            tools:ignore="Autofill" />

    <Button
            android:id="@+id/main_btn_action"
            android:layout_width="0dp"
            android:layout_height="48dp"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_margin="16dp"
            android:text="@string/main_btn_action_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>